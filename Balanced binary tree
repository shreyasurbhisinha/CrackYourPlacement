class Solution {
public:
int height(TreeNode* root,bool &valid){
    if(root==nullptr){
        return 0;
    }
    int left=height(root->left,valid);
    int right=height(root->right,valid);
    if(abs(left-right)>1){
        valid=0;
    }
    return 1 + max(left,right);
}
    bool isBalanced(TreeNode* root) {
        bool valid=1;
        height(root,valid);
        return valid;

        
        
    }
};
